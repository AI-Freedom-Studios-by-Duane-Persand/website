# Environment Configuration for AI Freedom Studios API

# ============================================
# POE API Configuration (Required)
# ============================================

# POE API Base URL
# For production Poe API: https://api.poe.com/v1
# For testing/local: http://localhost:8000 or your custom endpoint
POE_API_URL=https://api.poe.com/v1

# POE API Key
# Get your API key from https://poe.com/api_key
POE_API_KEY=your_poe_api_key_here

# ============================================
# Model Selection (Optional)
# ============================================

# Default model for image generation
# Options: dall-e-3, stable-diffusion-xl, gpt-4o (multimodal)
POE_IMAGE_MODEL=dall-e-3

# Default model for video generation
# Options: veo-3, gemini-1.5-pro (multimodal)
POE_VIDEO_MODEL=veo-3

# Default model for text generation
# Options: gpt-4o, claude-3-opus-20240229, gemini-1.5-pro
POE_TEXT_MODEL=gpt-4o

# ============================================
# Database Configuration
# ============================================

MONGODB_URI=mongodb://localhost:27017/ai-freedom-studios
MONGODB_DB_NAME=ai-freedom-studios

# ============================================
# Cloudflare R2 Configuration
# ============================================

R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=ai-freedom-assets
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# ============================================
# JWT Configuration
# ============================================

JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# ============================================
# Application Configuration
# ============================================

PORT=3000
NODE_ENV=development

# ============================================
# Stripe Configuration (Optional)
# ============================================

STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ============================================
# Media Generation Configuration
# ============================================

# Enable automatic media generation on creative creation
ENABLE_AUTO_MEDIA_GENERATION=true

# Image generation settings
IMAGE_DEFAULT_WIDTH=1024
IMAGE_DEFAULT_HEIGHT=1024
IMAGE_DEFAULT_QUALITY=standard

# Video generation settings
VIDEO_DEFAULT_DURATION=15
VIDEO_DEFAULT_RESOLUTION=1080p
VIDEO_DEFAULT_FPS=30

# Timeout settings (in milliseconds)
MEDIA_GENERATION_TIMEOUT=120000
IMAGE_GENERATION_TIMEOUT=30000
VIDEO_GENERATION_TIMEOUT=120000

# ============================================
# Logging Configuration
# ============================================

LOG_LEVEL=info
LOG_FILE=logs/app.log
