{
  "name": "ai-freedom-studios",
  "private": true,
  "workspaces": [
    "api",
    "frontend",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev:api": "npm --workspace api run start:dev",
    "dev:frontend": "npm --workspace frontend run dev",
    "build:all": "npm --workspace api run build && npm --workspace frontend run build",
    "dev": "npm-run-all --parallel dev:frontend dev:api",
    "start:api": "npm --workspace api run start",
    "start:frontend": "npm --workspace frontend run start",
    "start:all": "npm-run-all --parallel start:api start:frontend"
  },
